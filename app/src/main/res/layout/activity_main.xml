<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ast"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:src="@drawable/rr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#51FFEB3B"
        android:text="Aстронавт: Алексей Леонов!"
        android:textAlignment="center"
        android:textColor="#EA1818"
        android:textSize="26sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_write_wish"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="WRITE MY WISH!"
        android:textColor="#00BCD4"
        app:backgroundTint="#B5080909"
        app:cornerRadius="20dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pass_wish"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="SEND MY WISH!"
        android:textColor="#00BCD4"
        android:visibility="invisible"
        app:backgroundTint="#BC090808"
        app:cornerRadius="20dp" />


    <EditText
        android:id="@+id/et_my_wish"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#4FFFFFFF"
        android:padding="20dp"
        android:textAlignment="center"
        android:visibility="invisible" />


</androidx.appcompat.widget.LinearLayoutCompat>
